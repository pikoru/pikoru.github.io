{
  "name": "business",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "watch:babel": "npx babel scripts/functions.js --watch --out-file scripts/index.js",
    "babel:script": "babel scripts/form.js scripts/smooth-scroll.js --out-file scripts/index.js",
    "compress:script": "uglifyjs scripts/index.js --compress --mangle --output scripts/index.min.js",

    "dev": "webpack-dev-server --mode development --watch",

    "build": "npm-run-all babel:script compress:script compile:sass concat:css prefix:css compress:css",
    "dev-server": "live-server",
    "watch:sass": "node-sass sass/main.scss css/styles.css -w",
    "start": "npm-run-all --parallel dev-server watch:sass watch:babel",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/styles.css --output-style compressed"
  },
  "license": "MIT",
  "dependencies": {
    "live-server": "^1.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.5",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-es2015-arrow-functions": "^6.22.0",
    "babel-plugin-uglify": "^1.0.2",
    "babel-preset-env": "^1.6.1",
    "concat": "^1.0.3",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "uglify-js": "^3.3.22",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.1.0",
    "webpack-dev-server": "^3.1.3"
  }
}
